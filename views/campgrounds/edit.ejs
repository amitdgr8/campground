
<% include ./partials/header %>
<div class="container">
<div class="row">
    <h1 style="text-allign: center;">Edit Campground <%= campground.name%></h1>
    <div style="width: 30% margin: 50px auto;">
        <form action="/campgrounds/<%= campgrounds._id %>/edit?_method=PUT " method="POST">
            <div class="form-group"><input type="text" placeholder="Place" name="place" class="form-control"></div>
            <div class="form-group"><input type="text" placeholder="Image URL" name="image" class="form-control"></div>
            <div class="form-group"><input type="text" placeholder="Description" name="description" class="form-control"></div>
            <div class="form-group"><button class="btn btn-lg btn-block btn-primary">Submit !</button></div>
        </form>
        <a href="/campgrounds/">Go Back</a>
    </div>
    
</div>
</div>
<% include ./partials/footer %>